{
  "compilerOptions": {
    "target": "ES2016",
    "module": "system",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "inlineSourceMap": true,
    "outDir": "./build",
    "declaration": true,
    "declarationDir": "./build",
    "declarationMap": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
